#:set default_font_size "36sp"
#:import Factory kivy.factory.Factory

#:set color_button app.col['zolty']  # brown
#:set color_button_pressed app.col['morski']  # darker brown
#:set default_background_normal ''
#:set background_normal ''
#:set default_background_down ''
#:set background_down ''
#:set color_font   (0.957, 0.890, 0.843, 1)  # off white


<Widget>:
    font_name: 'DejaVuSans.ttf'

<MySpinnerOption@SpinnerOption>:
    background_color: color_button if self.state == 'down' else color_button_pressed
    background_down: 'atlas://data/images/defaulttheme/button'
    color: color_font
    font_size: sp(20)
    font_name: 'DejaVuSans.ttf'
    markup: True
    text_size : self.width, None
    halign: 'center'


<NumPadButton@Button>:
    font_size: '16dp'
    bold: True

<NumPadWidget>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 1
            id: num_label
            Label:
                id: num_label
                text: ''
        BoxLayout:
            size_hint_y: 5
            orientation: 'vertical'
            BoxLayout:
                NumPadButton:
                    text: '7'
                    on_press:
                        num_label.text = num_label.text + '7'
                NumPadButton:
                    text: '8'
                    on_press:
                        num_label.text = num_label.text + '8'
                NumPadButton:
                    text: '9'
                    on_press:
                        num_label.text = num_label.text + '9'
            BoxLayout:
                NumPadButton:
                    text: '4'
                    on_press:
                        num_label.text = num_label.text + '4'
                NumPadButton:
                    text: '5'
                    on_press:
                        num_label.text = num_label.text + '5'
                NumPadButton:
                    text: '6'
                    on_press:
                        num_label.text = num_label.text + '6'
            BoxLayout:
                NumPadButton:
                    text: '1'
                    on_press:
                        num_label.text = num_label.text + '1'
                NumPadButton:
                    text: '2'
                    on_press:
                        num_label.text = num_label.text + '2'
                NumPadButton:
                    text: '3'
                    on_press:
                        num_label.text = num_label.text + '3'
            BoxLayout:
                NumPadButton:
                    text: '0'
                    on_press:
                        num_label.text = num_label.text + '0'
                NumPadButton:
                    text: '.'
                    on_press:
                        num_label.text = num_label.text + '.'
                NumPadButton:
                    text: '\u2190'
                    on_press:
                        num_label.text = num_label.text[:-1]
            BoxLayout:
                BoxLayout:
                    size_hint_x: 1
                    NumPadButton:
                        text: 'C'
                        on_press:
                            num_label.text = ''
                BoxLayout:
                    size_hint_x: 2
                    NumPadButton:
                        id: enter_btn
                        text: 'Enter'




<NewEntry>:
    id: 'newentry'
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        FloatInput:
            id: amount
            text: ''
            input_filter: 'float'
            input_type: 'number'
            hint_text: 'Kwota'
            halign: 'center'
            multiline: False
        ToggleButton:
            id: minus
            text: '-'
            group: 'switcher'
            size_hint_x: .25
            state: 'down'
        ToggleButton:
            id: plus
            text: '+'
            group: 'switcher'
            size_hint_x: .25
    Date:
        id: date
    BoxLayout:
        orientation: 'horizontal'
        Category:
            id: category
            font_size: sp(26)
            text: self.kv_vals['+'][0] if plus.state == 'down' else self.kv_vals['-'][0]
            values: self.kv_vals['+'] if plus.state == 'down' else self.kv_vals['-']
            option_cls: Factory.get('MySpinnerOption')
            background_color: app.col['item']
            background_down: ''
            background_normal: ''
            markup: True
            text_size : self.width, None
            halign: 'center'
            size_hint_x: 90
#        Button:
#            text: "settings"
#            size_hint_x: 10

    MyTextInput:
        id: note
        hint_text: 'Notatka'
    BoxLayout:
        orientation: 'horizontal'
        Save:
            text: 'Zapisz'
            font_size: sp(24)
            markup: True
            size_hint_x: .85
#            background_color: app.col['zolty']
        Undo:
            text: '\u21B6'
            font_size: sp(20)
            markup: True
            size_hint_x: None
#            background_color: app.col['item']


<Item>:
    canvas.before:
        Color:
            rgba: app.col['item']
        RoundedRectangle:
            pos: self.pos
            size: self.size
    font_size: sp(18)
    markup: True

<TableContent>:
    viewclass: 'Item'
    RecycleGridLayout:
        cols: 4
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        spacing: 2
        multiselect: True
        touch_multiselect: True

<Table>:
    id: maintable
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Month:
                size_hint_x: .4
            Sumup:
                id: sum
                color: app.col['morski']
                font_size: sp(28)
                size_hint_x: .6
                canvas:
                    Color:
                        rgba: (246/255., 205/255., 97/255., 1)
                        Rectangle:
                            pos: self.pos,
                            size: self.size
        TableContent
            id: table

<LoginPopup>:
    title: 'Dane logowania'
    size_hint: (1, .55)
    BoxLayout:
        orientation: 'vertical'
        Accordion:
            orientation: 'horizontal'
            AccordionItem:
                title: 'Router'
                BoxLayout:
                    orientation: 'vertical'
                    TextInput:
                        id: user
                        multiline: False
                        hint_text: 'nazwa użytkownika'
                        halign: 'center'
                    TextInput:
                        id: pswd
                        password: True
                        multiline: False
                        hint_text: 'hasło'
                        halign: 'center'
                    Label:
                        text: 'IP routera'
                    TextInput:
                        id: router_ip
                        text: "192.168.1.1"
                        multiline: False
                        halign: 'center'
                    Label:
                        text: 'Ścieżka na routerze:'
                    TextInput:
                        id: path
                        text: "/usb1_1/inspectorbudget/"
                        multiline: False
                        halign: 'center'
                    Button:
                        id: router_ok
                        text: 'OK'
                        size_hint_y: .3
                        on_press: root.save('router')
            AccordionItem:
                title: 'API'
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'IP'
                    TextInput:
                        id: ip
                        text: "192.168.1.111:8000"
                        multiline: False
                        halign: 'center'
                    Label:
                        text: 'name'
                    TextInput:
                        id: ip_name
                        text: "inspectorbudget"
                        multiline: False
                        halign: 'center'
                    Button:
                        id: api_ok
                        text: 'OK'
                        on_press: root.save('api')
#                        size_hint_y: .2



<Synchro>:
    id: 'sync'
    BoxLayout:
        orientation: 'vertical'
        Status:
            text: self.txt
            background_color: app.col['zolty']
        Button:
            text: root.txt_dwn
            on_release: root.download(months=6)
            background_color: app.col['szary']
            text_size : self.width, None
            halign: 'center'
        Button:
            text: root.txt_snd
            on_release: root.send()
            background_color: app.col['losos']
            text_size : self.width, None
            halign: 'center'
        Button:
            text: '[size=26]\u2620[/size] Usuń dane z telefonu [size=26]\u2620[/size]'
            on_release: root.clear_all()
            background_color: app.col['item']
            markup: True

